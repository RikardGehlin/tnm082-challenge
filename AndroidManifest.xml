<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tnm082.challenge"
    android:versionCode="1"
    android:versionName="1.0" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="24dp"
    android:padding="6dp">
    
    <!-- För att test ska fungera -->
    <instrumentation android:name="android.test.InstrumentationTestRunner"
    	android:targetPackage="tnm082.challenge"
    	android:label="@string/app_name" />
    
    <!-- Tillåter internetåtkomst i appen -->
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission
        android:name="android.permission.READ_CONTACTS" />
    <uses-permission
        android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.READ_SOCIAL_STREAM" />
    <uses-permission
        android:name="android.permission.WRITE_SOCIAL_STREAM" />
    

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
<!-- 	 Aktivitet, startfeed  -->
        <activity
            android:name=".ChallengeActivity"
            android:label="@string/app_name" >
               <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Aktivitet, uppdragsvy -->
        <activity
       		android:name=".TutViewerActivity" >
        </activity>
        
        <!-- Behövs för testning -->
        <uses-library android:name="android.test.runner"/>
        
        <!-- varje tab är en separat aktivitet -->
        <activity android:name=".FeedActivity" />
        <activity android:name=".ListsActivity" />
        <activity android:name=".TextActivity" />
    </application>
	
    
</manifest>
